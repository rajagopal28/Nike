{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    {{#paper-button iconButton=true onClick=(action "toggle" 'leftSideBarLockedOpen')}}
      {{paper-icon "menu"}}
    {{/paper-button}}
    <h2>
      Nike - JustDoIt
    </h2>
    <span class="flex"></span>
    {{#if isAuthenticated}}
      {{#paper-button iconButton=true onClick=(action "logout")}}
        {{paper-icon "power-settings-new"}}
        {{#paper-tooltip}}Logout{{/paper-tooltip}}
      {{/paper-button}}
      {{#paper-menu as |menu|}}
        {{#menu.trigger}}
          {{#paper-button iconButton=true}}
            {{paper-icon "more_vert"}}
          {{/paper-button}}
        {{/menu.trigger}}
        {{#menu.content width=2 as |content|}}
          {{#content.menu-item onClick="updateProfileDialog"}}
            {{paper-icon "face"}} Update Profile
          {{/content.menu-item}}
        {{/menu.content}}
      {{/paper-menu}}
    {{/if}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
{{#paper-sidenav-container class="inner-sidenav"}}
  {{#paper-sidenav
    class="md-whiteframe-z2"
    name="left2"
    open=leftSideBarOpen
    lockedOpen=leftSideBarLockedOpen
    isLockedOpen=leftSideBarLockedOpen
    onToggle=(action (mut leftSideBarOpen))}}
    {{#paper-toolbar as |toolbar|}}
      {{#paper-toolbar-tools}}  {{#paper-button onClick=(action "transitionTo" "tasks")}} Home {{/paper-button}}{{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{#paper-content padding=true}}
      {{#paper-list}}
        {{#paper-item}}
          {{#paper-button onClick=(action "transitionTo" "dashboard")}}Dashboard Link{{/paper-button}}
        {{/paper-item}}
        {{#paper-item}}
          {{#paper-button onClick=(action "transitionTo" "labels")}}Labels Link{{/paper-button}}
        {{/paper-item}}
        {{#paper-item}}
         {{#paper-button onClick=(action "transitionTo" "tasks")}} Tasks Link{{/paper-button}}
        {{/paper-item}}
        {{#paper-item}}
         {{#paper-button onClick=(action "transitionTo" "users")}} Users Link{{/paper-button}}
        {{/paper-item}}
     {{/paper-list}}
    {{/paper-content}}
  {{/paper-sidenav}}
  {{#paper-card-content class="flex"}}
    {{yield}}
  {{/paper-card-content}}
{{/paper-sidenav-container}}
