{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}{{task.title}}{{/text.headline}}
    {{/title.text}}
  {{/card.title}}
  {{#card.actions class="layout-row layout-align-start-center" as |actions|}}
    Tags: {{#paper-chips
      readOnly=true
      content=task.labels as |item|}}
      <strong>{{item}}</strong>
    {{/paper-chips}}
    {{#paper-button onClick=(action (transition-to "tasks"))}}Back{{/paper-button}}
  {{/card.actions}}
  {{#card.content}}
    {{task.description}}
  {{/card.content}}
{{/paper-card}}
{{yield}}
